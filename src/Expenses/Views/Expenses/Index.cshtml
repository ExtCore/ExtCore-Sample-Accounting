@model Expenses.ViewModels.Expenses.IndexViewModel
<h1 class="master-detail-view__title">
  Expenses
</h1>
<table class="master-detail-view__table table" cellpadding="0" cellspacing="0">
  <tr class="table__row">
    <td class="table__cell table__cell--header">Amount</td>
    <td class="table__cell table__cell--header">Created</td>
  </tr>
  @foreach (var expense in this.Model.Expenses)
  {
    @Html.Partial("_Expense", expense)
  }
</table>
<div class="buttons">
  <a class="buttons__button button" href="/expenses/create">Create expense</a>
</div>