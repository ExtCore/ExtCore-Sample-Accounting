<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>@Html.Raw(this.ViewBag.Title as string)</title>
  @await Component.InvokeAsync("StyleSheets")
  @await Component.InvokeAsync("Scripts")
</head>
<body>
  <div class="master-detail-view">
    <div class="master-detail-view__master">
      <h1>
        Demo
      </h1>
      @await Component.InvokeAsync("Menu")
    </div>
    <div class="master-detail-view__detail">
      @RenderBody()
    </div>
  </div>
</body>
</html>